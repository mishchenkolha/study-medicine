{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "question"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "text": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "single-choise",
        "multiple-choise",
        "order"
      ]
    },
    "answers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::answer.answer"
    },
    "correct_answers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::answer.answer"
    },
    "difficulty_level": {
      "type": "integer",
      "default": 1,
      "min": 1,
      "max": 5
    }
  }
}
