{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "question"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "text": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "default": "single-choise",
      "enum": [
        "single-choise",
        "multiple-choise"
      ]
    },
    "answers": {
      "type": "component",
      "component": "components.qa",
      "repeatable": true
    },
    "difficulty_level": {
      "type": "integer",
      "default": 1,
      "min": 1,
      "max": 5
    },
    "quiz": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::quiz.quiz"
    }
  }
}
